{
  "manifest_version": 2,
  "name": "AgentXen",
  "version": "0.1.0",
  "description": "AI-powered browser agent with Ollama integration",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "nativeMessaging",
    "<all_urls>",
    "webNavigation"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "AgentXen",
    "default_popup": "popup.html"
  },
  "sidebar_action": {
    "default_title": "AgentXen Chat",
    "default_panel": "sidebar.html",
    "default_icon": "icons/icon-48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "agentxen@zen-browser.local"
    }
  }
}
